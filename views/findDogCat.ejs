<!DOCTYPE html>
<html lang="en">
<head>
  <title>Puppy and Kitty</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    html, body {
      height: 100%;
      margin: 0;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
    }
    .header-container {
      display: flex;
      flex-direction: row;
      background-color: #FFA500;
      height: 80px;
      align-items: center;
      border: 3px solid black;
    }
    .header {
      display: flex;
      
      align-items: center;
      padding: 0.5rem 1rem;
      flex-grow: 1;
    }
    .header img {
      height: 60px;
      width: auto;
    }
    .header h1 {
      margin: 0;
      font-size: 2em;
      font-weight: bold;
    }
    .time-container {
      margin-left: auto;
      padding-right: 1rem;
    }
    .main-content {
      display: flex;
      flex: 1;
      width: 100%;
    }
    nav {
      background: white;
      border-right: 2px solid black;
      min-width: 200px;
    }
    nav a.nav-link {
      color: black;
      border-bottom: 2px solid black;
      padding: 1rem;
      text-align: center;
      display: block;
    }
    nav a.nav-link.active, nav a.nav-link:hover {
      background-color: maroon;
      color: white;
    }
    article {
      flex: 1;
      background-color: grey;
      padding: 2rem;
      border-left: 2px solid black;
    }
    footer {
      text-align: center;
      padding: 1%;
      background-color: Orange;
      color: white;
      height: 80px;
      flex-shrink: 0;
      font-family: Arial, sans-serif;
      border: 3px solid black;
      width: 100%;
    }
    fieldset.orangeMaroon {
        background-color: Orange;
        border: 5px solid Maroon;
        color: black;
        font-weight: bold;
        padding: 1rem; 
    }
    @media (max-width: 768px) {
      nav {
        width: 100%;
        border-right: none;
        border-bottom: 2px solid black;
        padding: 0;
      }
      nav a.nav-link {
        border-bottom: 1px solid black;
        padding: 0.5rem;
        flex: 1;
      }
      .main-content {
        flex-direction: column;
      }
      article {
        border-left: none;
      }
    }
  </style>
  <script>
  function formValidation() {
  let animalCompleted = false;
  let breedCompleted = false;
  let genderCompleted = false;
  let dogCompleted = false;
  let catCompleted = false;
  let childrenCompleted = false;
  let ageCompleted = false;
  
  // verify if an animal is chosen
  if (document.getElementById('puppy').checked || document.getElementById('kitty').checked) {
    animalCompleted = true;
  } else {
    alert("Please select the animal of choice(dog or cat).");
    return false;
  }

  // verify if a breed of cat or dog is chosen
  if ( document.getElementById('breed').value !== "" || document.getElementById('other').checked) {
    breedCompleted = true;
  } else {
    alert("Please specify the breed of the animal or select 'Doesn't matter'.");
    return false;
  }

  // verify if an age is chosen
  if (document.getElementById('age').value !== "") {
    ageCompleted = true;
  } else {
    alert("Please select an age(0-2 year, 3-5  years, older than 5 years or dosen't matter).");
    return false;
  }

  // verify if a gender is chosen
  if (document.getElementById('women').checked || document.getElementById('men').checked || document.getElementById('either').checked) {
    genderCompleted = true;
  } else {
    alert("Please decide on the gender of the animal.");
    return false;
  }

  // verify if needs to get along with other dogs part is completed
  if (document.getElementById('yesDog').checked || document.getElementById('noDog').checked) {
    dogCompleted = true;
  } else {
    alert("Please specify if the animal needs to get along with other dogs.");
    return false;
  }

  // verify if needs to get along with other cats part is completed
  if (document.getElementById('yesCat').checked || document.getElementById('noCat').checked) {
    catCompleted = true;
  } else {
    alert("Please tell us if the animal needs to get along with other cats.");
    return false;
  }

  // verify if the animal needs to get along with small children part is completed
  if (document.getElementById('yesChildren').checked || document.getElementById('noChildren').checked) {
    childrenCompleted = true;
  } else {
    alert("Please tell us if the animal needs to get along with small children.");
    return false;
  }

  // return true if every part is completed
  if (animalCompleted && breedCompleted && genderCompleted && dogCompleted && catCompleted && childrenCompleted && ageCompleted){
    return true;
  }
}
  </script>
</head>
<body>
  <%- include('partials/header') %>

  <div class="main-content">
    <nav class="nav flex-column">
      <a class="nav-link" href="/">Home page</a>
      <a class="nav-link active" href="/findDogCat">Find a dog/cat</a>
      <a class="nav-link" href="/dogCare">Dog care</a>
      <a class="nav-link" href="/catCare">Cat care</a>
      <a class="nav-link" href="/createAccount">Create an account</a>
      <a class="nav-link" href="/petGiveAway">Have a pet to give away</a>
      <a class="nav-link" href="/LogOut">LogOut</a>
      <a class="nav-link" href="/contactUs">Contact Us</a>
    </nav>

    <article class="container-fluid">
        <h2><b>Find the Dog/Cat you want!</b></h2>
                <form action="/availablePets" method="post" onsubmit="return formValidation()">
                    <fieldset class="orangeMaroon">
                        <legend>Find a Dog/Cat</legend>
                        <p>
                          Cat or Dog:<br>
                          <label for="puppy"> <input type="radio" id="puppy" name="animal"
                            value="dog" /> Dog
                          </label>
                          <label for="kitty"> <input type="radio" id="kitty" name="animal"
                            value="cat" /> Cat
                          </label>
                          <br>
                        </p>
                        <p>
                          <label for="breed"> Breed of dog/cat:<br>
                            <input type="text" id="breed" name="dogCatBreed"
                                size="20" /> </label><br>
                          <label for="other"> <input type="radio" id="other" name="dogCatBreed"
                            value="dosen't matter" /> Doesn't matter
                          </label>
                          <br>
                        </p>
                        <p>
                          Age of animal:<br>
                          <select id="age" name="age2">
                            <option> 0-2 years</option>
                            <option> 3-5 years</option>
                            <option> Older than 5 years</option>
                            <option> Doesn't matter </option>
                          </select>
                        </p>
                        <p>
                          Animal gender:<br>
                          <label for="women"> <input type="radio" id="women" name="genderType"
                            value="Female" /> Female
                          </label>
                          <label for="men"> <input type="radio" id="men" name="genderType"
                            value="Male" /> Male
                          </label>
                          <label for="either"> <input type="radio" id="either" name="genderType"
                            value="any" /> Doesn't matter
                          </label>
                          <br>
                        </p>
                        <p>
                          Gets along with other dogs?<br>
                          <label for="yesDog"> <input type="radio" id="yesDog" name="getAlongDog"
                            value="Yes" /> Yes
                          </label>
                          <label for="noDog"> <input type="radio" id="noDog" name="getAlongDog"
                            value="No" /> No
                          </label>
                          <br>
                        </p>
                        <p>
                          Gets along with other cats?<br>
                          <label for="yesCat"> <input type="radio" id="yesCat" name="getAlongCat"
                            value="Yes" /> Yes
                          </label>
                          <label for="noCat"> <input type="radio" id="noCat" name="getAlongCat"
                            value="No" /> No
                          </label>
                          <br>
                        </p>
                        <p>
                          Suitable for a family with small children?<br>
                          <label for="yesChildren"> <input type="radio" id="yesChildren" name="getAlongChildren"
                            value="Yes" /> Yes
                          </label>
                          <label for="noChildren"> <input type="radio" id="noChildren" name="getAlongChildren"
                            value="No" /> No
                          </label>
                          <br>
                        </p>
                    </fieldset>
                    <br>
                    <p> <b>Thank you for taking time to fill out our survey!</b></p>
                    <p>
                      <button type="submit" class="btn btn-primary">Search</button>
                      <button type="reset" class="btn btn-primary">Reset</button>
                    </p>
                </form>
                <% if (typeof message !== 'undefined') { %>
                  <div class="alert alert-info mt-3"><%= message %></div>
                <% } %>
    </article>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
