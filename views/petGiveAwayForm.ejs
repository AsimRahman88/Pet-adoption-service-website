      nav {
        width: 100%;
        border-right: none;
        border-bottom: 2px solid black;
        padding: 0;
      }
      nav a.nav-link {
        border-bottom: 1px solid black;
        padding: 0.5rem;
        flex: 1;
      }
      .main-content {
        flex-direction: column;
      }
      article {
        border-left: none;
