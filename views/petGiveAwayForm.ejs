  }
}
  </script>
</head>
<body>
  <%- include('partials/header') %>

  <div class="main-content">
    <nav class="nav flex-column">
      <a class="nav-link" href="/">Home page</a>
      <a class="nav-link" href="/findDogCat">Find a dog/cat</a>
      <a class="nav-link" href="/dogCare">Dog care</a>
      <a class="nav-link" href="/catCare">Cat care</a>
      <a class="nav-link" href="/createAccount">Create an account</a>
      <a class="nav-link active" href="/petGiveAway">Have a pet to give away</a>
      <a class="nav-link" href="/LogOut">LogOut</a>
      <a class="nav-link" href="/contactUs">Contact Us</a>
    </nav>

    <article class="container-fluid">
        <h2><b>Have a pet to give away?</b></h2>
    <form action="/submitPetDetails" method="post" onsubmit="return formValidation()">
	<fieldset class="orangeMaroon">
		<legend>Have a pet to give away</legend>
    <p>
      Cat or Dog:<br>
      <label for="doggy"> <input type = "radio" id="doggy" name = "animalType"
        value = "dog" /> Dog
      </label>
      <label for="kitten"> <input type = "radio" id="kitten" name = "animalType"
        value = "cat" /> Cat
      </label>
      <br>
    </p>
    <p>
      <label for="dogCatbreed"> Breed of dog/cat:<br>
        <input type = "text" id="dogCatbreed" name = "breedDogCat"
            size = "20" /> </label><br>
      <label for="mixed"> <input type = "radio" id="mixed" name = "breedDogCat"
        value = "mixed Breed" /> Mixed breed
      </label>
      <br>
    </p>
    <p>
      Age of animal:<br>
      <select id="age" name="age">
        <option> 0-2 years</option>
        <option> 3-5 years</option>
        <option> Older than 5 years</option>
      </select>
    </p>
    <p>
      Animal gender:<br>
      <label for="girl"> <input type = "radio" id="girl" name = "typeGender"
        value = "Female" /> Female
      </label>
      <label for="boy"> <input type = "radio" id="boy" name = "typeGender"
        value = "Male" /> Male
      </label>
      <br>
    </p>
    <p>
      Gets along with other dogs?<br>
      <label for="dogAgree"> <input type = "radio" id="dogAgree" name = "alongDog"
        value = "Yes" /> Yes
      </label>
      <label for="dogNope"> <input type = "radio" id="dogNope" name = "alongDog"
        value = "No" /> No
      </label>
      <br>
    </p>
    <p>
      Gets along with other cats?<br>
      <label for="CatAgree"> <input type = "radio" id="CatAgree" name = "alongCat"
        value = "Yes" /> Yes
      </label>
      <label for="CatNope"> <input type = "radio" id="CatNope" name = "alongCat"
        value = "No" /> No
      </label>
      <br>
    </p>
    <p>
      Suitable for a family with small children?<br>
      <label for="kidSuitable"> <input type = "radio" id="kidSuitable" name = "alongChildren"
        value = "Yes" /> Yes
      </label>
      <label for="kidUnsuitable"> <input type = "radio" id="kidUnsuitable" name = "alongChildren"
        value = "No" /> No
      </label>
      <br>
    </p>
    <p>
      <label for="aspirations">Tell us about your animal:</label><br>
      <textarea id="aspirations" name="aspirations" rows="3" cols="40"></textarea>
    </p>
    <p>
      <label for="firstName">First Name of Owner:<br>
        <input type="text" id="firstName" name="name1" size="20" />
      </label>
      <br>
      <label for="lastName">Family Name of Owner:<br>
        <input type="text" id="lastName" name="name2" size="20" />
      </label>
      <br>
      <label for="email">Email of Owner:<br>
        <input type="text" id="email" name="emailOwner" size="20" />
      </label>
      <br>
    </p>
	</fieldset>
	<br>
	<p><b>Thank you for taking time to fill out our survey!</b></p>
	<p>
		<button type="submit" class="btn btn-primary">Submit</button>
		<button type="reset" class="btn btn-primary">Reset</button>
	</p>
    </form>
    <% if (typeof message !== 'undefined') { %>
      <div class="alert alert-info mt-3"><%= message %></div>
    <% } %>
    </article>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
